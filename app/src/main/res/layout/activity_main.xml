<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_toCamera2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera2"/>

    <Button
        android:id="@+id/btn_toCamera1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Camera1"
        app:layout_constraintStart_toEndOf="@+id/btn_toCamera2" />

    <Button
        android:id="@+id/btn_toOnlyPlayVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="OnlyPlayVideo"
        app:layout_constraintStart_toEndOf="@+id/btn_toCamera1" />

    <Button
        android:id="@+id/btn_toUtil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Util"
        app:layout_constraintTop_toBottomOf="@+id/btn_toCamera2" />

</androidx.constraintlayout.widget.ConstraintLayout>