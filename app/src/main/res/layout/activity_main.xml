<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_toCamera2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera2"/>

    <Button
        android:id="@+id/btn_toCamera1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Camera1"
        app:layout_constraintStart_toEndOf="@+id/btn_toCamera2" />

    <Button
        android:id="@+id/btn_toOnlyPlayVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="OnlyPlayVideo"
        app:layout_constraintStart_toEndOf="@+id/btn_toCamera1" />

    <Button
        android:id="@+id/btn_toUtil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Util"
        app:layout_constraintTop_toBottomOf="@+id/btn_toCamera2" />

    <Button
        android:id="@+id/btn_toAudioRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="AudioRecord"
        app:layout_constraintStart_toEndOf="@+id/btn_toUtil" />

    <Button
        android:id="@+id/btn_toOpenGL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/btn_toUtil"
        app:layout_constraintTop_toBottomOf="@+id/btn_toCamera1"
        android:text="OPENGL"/>

    <Button
        android:id="@+id/btn_toFBO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="FBO"
        app:layout_constraintStart_toEndOf="@+id/btn_toOpenGL"
        app:layout_constraintTop_toBottomOf="@+id/btn_toOnlyPlayVideo" />

    <Button
        android:id="@+id/btn_toFirstCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="测试重复startPreview"
        app:layout_constraintTop_toBottomOf="@+id/btn_toUtil" />

    <Button
        android:id="@+id/btn_toBlend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Blend"
        app:layout_constraintStart_toEndOf="@+id/btn_toFirstCamera"
        app:layout_constraintTop_toBottomOf="@+id/btn_toFBO" />

    <Button
        android:id="@+id/btn_toImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image"
        app:layout_constraintTop_toBottomOf="@+id/btn_toFirstCamera" />

</androidx.constraintlayout.widget.ConstraintLayout>